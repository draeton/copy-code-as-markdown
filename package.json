{
  "name": "copy-code-as-markdown",
	"displayName": "Copy Code as Markdown",
	"description": "Help you to copy code with markdown fences and filename",
	"version": "0.0.3",
	"publisher": "pluveto",
	"repository": {"type":"Github", "url": "https://github.com/pluveto/copy-code-as-markdown"},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:copy-code-as-markdown.CopySelectionAsMarkdown"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration":{
			"title": "Copy Code As Markdown",
			"properties": {
				"copyCodeAsMarkdown.template":{
					"type": "string",
					"default": "*{filename}* {lineNumber}:\n```{lang}\n{text}\n```",
					"markdownDescription": "Template of the copied text."
				}
			}
		},
		"commands": [{
            "command": "copy-code-as-markdown.CopySelectionAsMarkdown",
            "title": "Copy selection code as Markdown"
		}]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.59.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }

}
